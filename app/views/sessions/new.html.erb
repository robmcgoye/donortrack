
<div class="container mb-5 pb-5">

  <div class="card">
    <div class="card-header fw-semibold fs-4 text-center py-1">
      Login
    </div>
    <div class="card-body">
      <%= render 'layouts/messages' %>
      <%= form_with(url: sign_in_path) do |form| %>
        <div class="row mb-2">
         <%= form.label :email, class: "col-sm-2 col-form-label" %>  
          <div class="col-sm-10">
            <%= form.email_field :email, required: true, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
          </div>
        </div>
        <div class="row mb-3">
          <%= form.label :password, class: "col-sm-2 col-form-label text-nowrap" %>
          <div class="col-sm-10">
            <%= form.password_field :password, required: true, autocomplete: "current-password", class: "form-control" %>          
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 offset-sm-2 d-grid">
            <%= form.button nil, class: "btn btn-secondary" do %>
              <i class="bi bi-box-arrow-in-left pe-1"></i>Login
            <% end %>
          </div>
        </div>
      <% end %>
  </div>

  <div class="card-footer text-end py-1">
    <div class="btn-group">
      <% if User.first.nil? %>
        <%= link_to "Sign up", sign_up_path, class: "btn btn-outline-secondary btn-sm" %> 
      <% end %>
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "btn btn-outline-secondary btn-sm" %>
    </div>
  </div>
</div>
