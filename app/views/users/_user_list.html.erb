<%= turbo_frame_tag "user_list" do %>

  <div class="ct-table">
    <%# Table Header %>
    <div class="row ct-th">
      <div class="col ct-td">Email</div>
      <div class="col ct-td">Info</div>
      <div class="col-auto ct-td">Actions</div>
    </div>
    <%# Table Content %>
    <% @users.each_with_index do |user, index| %>
      <%= render 'user', user: user, index: index %>
    <% end %>  
  </div>

<% end %>
