<%= turbo_frame_tag "report_form" do %>
  <%= form_with model: ContributionReportForm.new, url: foundation_reporting_contribution_report_path(@foundation), html: {id: "contribution_report"} do |f| %>
    <div class="card-body py-1">

      <div class="row align-items-center pb-1">
        <div class="col-md-1 col-lg-2">
          <%= f.label :starting_date, "Start", class: "badge text-bg-secondary" %>
        </div>
        <div class="col-md-5 col-lg-4">
          <%= f.date_field :starting_date, class: "form-control form-control-sm" %>  
        </div>
        <div class="col-md-1  col-lg-2">
          <%= f.label :ending_date, "End", class: "badge text-bg-secondary" %>
        </div>
        <div class="col-md-5 col-lg-4">
          <%= f.date_field :ending_date, class: "form-control form-control-sm" %>  
        </div>
      </div>
      <div class="border p-1 mt-1">
      <div class="row pb-1">
        <div class="col-md-6 col-lg-4">
          <div class="row mx-0">
            <div class="col py-1 ps-2">
              <span class="badge text-bg-secondary">Select Fund(s)</span>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.select(:funds, get_select_options_for_funding_sources(@foundation, true), 
                                          { :selected => 0, :multiple => true, :size => 5 }, 
                                          { class: "form-select form-select-sm" }) %>
            </div>
          </div>          
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="row mx-0">
            <div class="col ps-2 py-1">
              <span class="badge text-bg-secondary">Select Donor(s)</span>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.select(:donors, get_select_options_for_donors(@foundation, true),
                                          { :selected => 0, :multiple => true, :size => 5 }, 
                                          { class: "form-select form-select-sm" }) %>
            </div>
          </div>          
          
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="row mx-0">
            <div class="col ps-2 py-1">
              <span class="badge text-bg-secondary">Select Type(s)</span>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.select(:types, get_select_options_for_organization_types(@foundation, true), 
                                              { :selected => 0, :multiple => true, :size => 5 } , 
                                              { class: "form-select form-select-sm" }) %>
            </div>
          </div>          
        </div>
      </div>
      </div>
      <div class="pt-2 d-grid gap-1">
        <button type="button" class="btn btn-outline-secondary btn-sm"               
                data-action="click->reports#print_contribution">
          <i class="bi bi-printer pe-1"></i>Print Report
        </button>          
      </div> 
      
    </div>
  <% end %>
<% end %>  