<div id="main_content" data-controller="pages" 
      data-pages-sbnum-value="5"
      data-pages-sidebar-outlet="#sidebar-controller">

  <div class="card">
    <div class="card-header my-header">
      <%= render "fdn/settings/nav" %>
    </div>
    <div class="container-fluid py-3">
      <div class="row text-center">
        <div class="col"><h5>Donors list</h5></div>
      </div>

      <div class="container-fluid mt-3 px-0">
       
        <%# Table Header %>
        <div class="row tb-header pt-1">
          <div class="col-4">Code</div>
          <div class="col-6">Name</div>
          <div class="d-none d-sm-block col-2 text-center">Actions</div>
        </div>
        <%= turbo_frame_tag "new-donor-form", src: new_foundation_settings_donor_path(@foundation) %>
        <%# Table Content %>
        <div id="donors">
          <%= render @foundation.donors.sort_full_name_up %>
        </div>
      </div>

    </div>

  </div>
  
</div>
