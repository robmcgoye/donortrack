<%= turbo_frame_tag @foundation do %>
  <div class="card-body">
    <div class="row">
      <div class="col">
       
          <div class="row">
            <div class="col-sm-3">Abbr :</div>
            <div class="col"><%= @foundation.short_name %></div>
          </div>
          <div class="row">
            <div class="col-sm-3">Name :</div>
            <div class="col"><%= @foundation.long_name %></div>
          </div>
          <div class="row align-items-center">
            <div class="col-sm-3">Logo :</div>
            <div class="col"><%= image_tag(@foundation.image_logo_as_thumbnail) if @foundation.image_logo.attached? %></div>
          </div>
          <% if @foundation.image_logo.attached? %>
            <div class="row align-items-center py-1">
              <div class="col offset-sm-3">
                <%= button_to foundation_remove_image_logo_path(@foundation), method: :delete, class: "btn btn-sm btn-outline-danger text-start", 
                      form: {data: {turbo_confirm: 'Are you sure?'} } do %>
                  <i class="bi bi-trash pe-1"></i>Remove Logo
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="row align-items-center">
            <div class="col-sm-3">Header :</div>
            <div class="col"><%= image_tag(@foundation.image_header, style: "width:200px; height:50px") if @foundation.image_header.attached? %></div>
          </div>
          <% if @foundation.image_header.attached? %>
            <div class="row align-items-center py-1">
              <div class="col offset-sm-3">
                <%= button_to foundation_remove_image_header_path(@foundation), method: :delete, class: "btn btn-sm btn-outline-danger text-start", 
                      form: {data: {turbo_confirm: 'Are you sure?'} } do %>
                  <i class="bi bi-trash pe-1"></i>Remove Header
                <% end %>
              </div>
            </div>
          <% end %>

        
      </div>
      <div class="col-auto ps-0">
        <div class="btn-group">
          <%= link_to edit_foundation_path(@foundation), class: "btn btn-sm btn-outline-secondary text-start" do %>
            <i class="bi bi-pencil-square pe-1"></i>Edit
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>