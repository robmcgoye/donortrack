<%# locals: ( organization_type:, organization_type_counter: 0, organization_type_iteration: 1 ) -%>
<%= turbo_frame_tag organization_type do %>
  <div class="row <%= organization_type_counter.odd? ? "ct-odd" : "ct-even" %>">
    <div class="col-3 col-sm-4 ct-td">
      <%= organization_type.code %>
    </div>
    <div class="col-6 ct-td">
      <%= organization_type.description %>
    </div>
    <div class="col-2 ct-td text-center">
      <div class="btn-group">
        <%= link_to edit_foundation_settings_organization_type_path(@foundation.id, organization_type), class: "btn btn-sm btn-outline-primary" do %>
          <i class="bi bi-pencil-square pe-1"></i>
        <% end %>
        <%= button_to foundation_settings_organization_type_path(@foundation.id, organization_type), method: :delete, class: "btn btn-sm btn-outline-danger", 
              form: {data: {turbo_confirm: 'Are you sure?'}} do %>
          <i class="bi bi-trash pe-1"></i>
        <% end %>         
      </div>
    </div>
  </div>
<% end %>