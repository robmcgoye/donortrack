<%=turbo_frame_tag "organizations_list" do %>
  <div class="p-2">
    <% if organizations.blank? %>
      No records found...
    <% else %>
      <%= render organizations, page: @pagy.page %>
    <% end %>
  </div>
  <% if @pagy.pages > 1 %>
    <div class="card-pagy pt-2">
      <%#== pagy_nav(@pagy) %>
      <%#== pagy_bootstrap_nav(@pagy) %>
      <%== render partial: 'pagy/bootstrap_nav', locals: {pagy: @pagy} %>
    </div>
  <% end %>
<% end %>