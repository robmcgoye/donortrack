<%= render 'shared/error_messages', resource: organization %>
<%= form_with model: organization, url: form_url do |f| %>

  <div class="row">
    <div class="col pe-4">
      <div class="row mb-1 align-items-center">
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label :name, class: "mb-1" %>
        </div>
        <div class="col-sm-10 col-lg-11">
          <%= f.text_field :name, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row align-items-center mb-2">
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label :contact, class: "mb-1" %>
        </div>
        <div class="col-sm-10 col-lg-11">
          <%= f.text_field :contact, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row align-items-center mb-2">
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label "Type", class: "mb-1" %>
        </div>
        <div class="col-sm-4 col-lg-5">
          <%= f.select :organization_type_id, get_select_options_for_organization_types(@foundation), {include_blank: 'Choose...'}, class: "form-select form-select-sm form-control form-secondary" %>
          <%#= get_select_options_for_organization_types(@foundation) %>
        </div>
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label :tax_number, "Tax #", class: "mb-1" %>
        </div>
        <div class="col-sm-4 col-lg-5">
          <%= f.text_field :tax_number, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row mb-1">
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label :address_1, "Address", class: "mb-1" %>
        </div>
        <div class="col-sm-10 col-lg-11">
          <%= f.text_field :address_1, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-10 offset-sm-2 col-lg-11 offset-lg-1">
          <%= f.text_field :address_2, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row align-items-center mb-1">
        <div class="col-sm-2 col-lg-1 text-end">
          <%= f.label :city, class: "mb-1" %>
        </div>
        <div class="col-sm-4 col-lg-5">
          <%= f.text_field :city, class: "form-control form-control-sm form-secondary" %>
        </div>
        <div class="col-sm-1 text-end">
          <%= f.label :state, "ST", class: "mb-1" %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :state, class: "form-control form-control-sm form-secondary" %>
        </div>
        <div class="col-sm-1 text-end">
          <%= f.label :zip, class: "mb-1" %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :zip, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>
      <div class="row align-items-center">
        <div class="col-sm-2 offset-sm-5 text-end">
          <%= f.label :country, class: "mb-1" %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :country, class: "form-control form-control-sm form-secondary" %>
        </div>
      </div>          
    </div>
  </div>
  <div class="row mt-2">
    <div class="col text-end" role="group">
      <div class="btn-group">
        <%= f.button class: "py-1 btn btn-sm btn-outline-primary text-start" do %>
          <i class="bi bi-floppy pe-1"></i>Save
        <% end %>
        <%= link_to cancel_foundation_organization_path(@foundation, get_id(organization), page: page, show: show), 
              :"data-turbo-stream" => true, class: "py-1 btn btn-sm btn-outline-secondary text-start" do %>
          <i class="bi bi-x-square pe-1"></i>Cancel
        <% end %>
      </div>
    </div>  
  </div>
<% end %>
