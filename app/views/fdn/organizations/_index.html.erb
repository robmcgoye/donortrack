<div id="main_content" data-controller="pages" 
      data-pages-sbnum-value="1"
      data-pages-sidebar-outlet="#sidebar-controller">
  
  <div class="card">
    <div class="card-header text-center my-header">
      <div class="row">
        <div class="col-auto"><%= image_tag(@foundation.resize_image_logo(25,25)) if @foundation.image_logo.attached? %></div>
        <div class="col text-center"><h5 class="mb-0">Organizations</h5></div>
      </div>
    </div>
    <div class="card-body pb-0 px-0">
      <div class="container-fluid" id="organization-controller" data-controller="sortmgmt" 
            data-sortmgmt-url-value="<%= foundation_organizations_sort_path(@foundation, page: page, by: by) %>" 
            data-sortmgmt-dir-value="<%= dir %>" 
            data-sortmgmt-query-value="<%= query %>" 
            data-sortmgmt-selected-value="<%= by %>">
        <%= render "new_placeholder" %>

        <%= render "search", create: false %>
        <div class="row tb-header py-1 align-items-center">
          <div class="col-10 col-sm-5">
            <a href="#" data-action="sortmgmt#sort" 
                data-value="<%= APP_CONSTANTS.organization.sort.name %>" 
                data-url="<%= foundation_organizations_sort_path(@foundation, by: APP_CONSTANTS.organization.sort.name) %>" 
                class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-100-hover">
              Name<i class="ps-1 bi" data-sortmgmt-target="sort_icon"></i>
            </a>
          </div>
          <div class="d-none d-sm-block col-sm-3">
            <a href="#" data-action="sortmgmt#sort" 
                data-value="<%= APP_CONSTANTS.organization.sort.contact %>" 
                data-url="<%= foundation_organizations_sort_path(@foundation, by: APP_CONSTANTS.organization.sort.contact) %>" 
                class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-100-hover">
              Contact<i class="ps-1 bi" data-sortmgmt-target="sort_icon"></i>
            </a>
          </div>
          <div class="d-none d-sm-block col-sm-3">
            <a href="#" data-action="sortmgmt#sort" 
                data-value="<%= APP_CONSTANTS.organization.sort.type %>" 
                data-url="<%= foundation_organizations_sort_path(@foundation, by: APP_CONSTANTS.organization.sort.type) %>" 
                class="link-dark link-underline link-underline-opacity-0 link-underline-opacity-100-hover">
              Type<i class="ps-1 bi" data-sortmgmt-target="sort_icon"></i>
            </a>
          </div>
          <div class="col-1 px-0">
            <%= link_to new_foundation_organization_path(@foundation), class: "btn btn-sm btn-outline-success py-0", data: { turbo_frame: "new_organization" } do %>
              New
            <% end %>
          </div>
        </div>
        <%= render "organizations_list", organizations: @organizations %>
      </div>
    </div>
  </div>
  
</div>
