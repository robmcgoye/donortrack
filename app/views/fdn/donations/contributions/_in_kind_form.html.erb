<%# locals: (in_kind_builder:) %>

<div class="row mb-2 align-items-center">
  <div class="col-auto text-end pe-1">
    <i class="bi bi-calendar-date pe-1" data-controller="tooltip" data-tooltip-target="tooltip" title="Type of In Kind"></i>
  </div>
  <div class="col">
    <%= in_kind_builder.date_field :transaction_at, class: "form-control form-control-sm" %>
  </div>

  <div class="col-auto text-end pe-1">
    <i class="bi bi-basket-fill pe-1" data-controller="tooltip" data-tooltip-target="tooltip" title="Type of In Kind"></i>
  </div>
  <div class="col ps-0">
    <%= in_kind_builder.select :type_of, InKind.type_ofs.map{|k, v| [ k.titleize, k ]},  
      {include_blank: 'Choose...'}, {class: "form-select form-select-sm form-select-input"}  %>
  </div>

  <div class="col-auto text-end pe-1">
    <i class="bi bi-currency-dollar pe-1" data-controller="tooltip" data-tooltip-target="tooltip" title="Value"></i>
  </div>
  <div class="col ps-0">
    <%= in_kind_builder.text_field :value, class: "text-end form-control form-control-sm" %>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="row">
      <div class="col-auto pe-1">
        <i class="bi bi-journal-text text-big pe-1" data-controller="tooltip" data-tooltip-target="tooltip" title="Description"></i>
      </div>
      <div class="col ps-0">
        <%= in_kind_builder.text_area :description, class: "form-control", rows: 3 %>
      </div>
    </div>
  </div>
</div>