<%= turbo_frame_tag Commitment.new do %>
  <% if @errors.empty? %>
    <%= render 'layouts/messages' %>
    <%= render "/fdn/donations/organization_select", 
        type: "commitment", 
        contribution_title: "Commitment", 
        filter_url: new_foundation_commitment_path(@foundation), 
        next_page_url: foundation_commitments_new_next_path(@foundation), 
        cancel_url: cancel_foundation_commitment_path(@foundation, get_id(Commitment.new)) %>
  <% else %>
    <div class="container m-2">
      <div class="alert alert-danger">
        <div class="row align-items-end">
          <div class="col-auto pe-1">
            <i class="bi bi-exclamation-triangle fs-4"></i>
          </div>
          <div class="col ps-1">
            <h6 class="alert-heading">
              The following <%= pluralize(@errors.count, "error") %> need to be corrected:
            </h6>
          </div>
        </div>
        <div class="row">
          <div class="col offset-1 ps-0">
            <ul class="mb-2">
              <% @errors.each do |message| %>
                <li class="small"><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>