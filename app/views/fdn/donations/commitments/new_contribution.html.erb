<%= turbo_frame_tag dom_id(Contribution.new, :commitment), 
      autoscroll: true,
      data: { 
        autoscroll_block: 'end',
        autoscroll_behavior: 'smooth' 
      } do %>

    <div class="card-edit mt-3">
    <div class="card-header">
      <i class="bi bi-cash pe-1"></i>
      New Payment
    </div>
    
    <%= render "contribution_form", contribution: @contribution, form_url: foundation_commitment_contributions_path(@foundation, @commitment) %>
  </div>

<% end %>