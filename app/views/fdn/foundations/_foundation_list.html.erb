<%= turbo_frame_tag "foundation_list" do %>
  <div class="table-responsive mt-1">
    <table class="table table-striped">
      <thead>
        <tr>
          <th colspan="3">Foundations</th>
        </tr>
      </thead>    
      <tbody class="table-group-divider">
        <% @foundations.each do |foundation| %>
          <tr>
            <td><%= link_to foundation.short_name, dashboard_foundation_path(foundation) %></td>
            <td><%=foundation.long_name %></td>
            <td>
              <div class="dropstart" role="group">
                <button type="button" class="btn btn-sm btn-outline-dark my-dropdown-toggle" 
                        data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li>
                    <%= link_to dashboard_foundation_path(foundation), class: "dropdown-item" do %>
                      <i class="bi bi-folder2-open pe-1"></i>open
                    <% end %>
                  </li>
                  <li>
                    <%= button_to foundation, method: :delete, class: "dropdown-item", 
                          form: {data: {turbo_confirm: 'Are you sure? (This cannot be undone!!)'}} do %>
                      <i class="bi bi-trash pe-1"></i>Delete
                    <% end %>          
                  </li>
                </ul>
              </div>
            </td>        
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>