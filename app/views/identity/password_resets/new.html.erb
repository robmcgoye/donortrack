<div class="container mb-5">
  <div class="card">
    <div class="card-header fw-semibold fs-4 text-center py-1">
      Forgot your password?
    </div>
    <div class="card-body">
      <%= render 'layouts/messages' %>
      <%= form_with(url: identity_password_reset_path) do |form| %>
        <div class="row mb-2">
          <%= form.label :email, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= form.email_field :email, required: true, autofocus: true, class: "form-control", placeholder: "Email address" %>
          </div>            
        </div>
        <div class="row">
          <div class="d-grid col-sm-10 offset-sm-2">
            <%= form.button nil, class: "btn btn-secondary" do %>
              <i class="bi bi-send pe-2"></i>Send password reset email
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-end py-1">
      <div class="btn-group">
      <%= link_to "Login", sign_in_path, class: "btn btn-outline-secondary btn-sm" %> 
      </div>
    </div>
  </div>
</div>


